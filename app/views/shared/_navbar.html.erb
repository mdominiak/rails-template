<header class="bg-gray-900 border-b border-b-gray-700">
  <nav class="container mx-auto flex items-center py-2 px-2">
    <%= link_to app_name, root_path %>

    <div class='flex grow gap-x-3 justify-end'>
      <% if user_signed_in? %>
        <%= button_to 'Log out', destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to 'Log in', new_user_session_path, class: 'link-primary' %>
        <%= link_to 'Sign up', new_user_registration_path, class: 'link-primary' %>
      <% end %>
    </div>
  </nav>
</header>
