<div class='mx-auto p-4 sm:max-w-sm'>
  <h1 class='text-center text-xl font-bold leading-tight tracking-tight my-4'>
    Log in to <%= app_name %>
  </h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
    <div>
      <%= f.label :email, class: 'block text-sm font-medium mb-2' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div>
      <%= f.label :password, class: 'block text-sm font-medium mb-2' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: 'form-checkbox' %>
        <%= f.label :remember_me, class: 'ml-3 text-gray-300 text-sm' %>
      </div>
    <% end %>

    <div class="my-4">
      <%= f.submit "Log in", class: 'btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>